{
  "name": "@johangorter/mcp-pdf-server",
  "version": "0.3.0",
  "description": "Model Context Protocol (MCP) server for PDF text extraction operations",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-pdf-server": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "npm run build && node dist/index.js",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepack": "npm run build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "build:mcpb": "node tools/build-mcpb.cjs",
    "validate:manifest": "node -e \"const fs=require('fs'); const manifest=JSON.parse(fs.readFileSync('manifest.json')); console.log('âœ… Manifest valid:', manifest.name, 'v' + manifest.version);\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "pdf",
    "text-extraction",
    "claude-desktop",
    "typescript",
    "nodejs"
  ],
  "author": "Johan Gorter",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "unpdf": "^1.2.2",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@anthropic-ai/mcpb": "^1.1.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^22.0.0",
    "@types/pdfkit": "^0.17.2",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "archiver": "^7.0.1",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "pdfkit": "^0.17.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.20.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/johan-gorter/mcp-pdf-server.git"
  },
  "bugs": {
    "url": "https://github.com/johan-gorter/mcp-pdf-server/issues"
  },
  "homepage": "https://github.com/johan-gorter/mcp-pdf-server#readme"
}
